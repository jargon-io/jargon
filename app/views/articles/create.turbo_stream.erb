<%= turbo_stream.prepend "articles" do %>
  <article id="<%= dom_id(@article) %>" class="border border-gray-200 rounded-lg p-5 animate-pulse">
    <div class="h-6 bg-gray-200 rounded w-3/4 mb-3"></div>
    <div class="h-4 bg-gray-100 rounded w-1/2"></div>
    <p class="text-sm text-gray-400 mt-3"><%= @article.url %></p>
  </article>
<% end %>

<%= turbo_stream.replace "new_article" do %>
  <%= form_with model: Article.new do |f| %>
    <div class="flex gap-3">
      <%= f.url_field :url,
          placeholder: "https://example.com/article",
          required: true,
          class: "flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      <%= f.submit "Add",
          class: "px-6 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 cursor-pointer" %>
    </div>
  <% end %>
<% end %>

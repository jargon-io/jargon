<%= turbo_stream_from "article_#{@article.id}_insights" %>

<div class="w-full max-w-2xl mx-auto space-y-4">
  <h1 class="text-3xl font-bold mb-4"><%= @article.title %></h1>

  <div class="text-sm text-gray-500 mb-6 flex items-center gap-4">
    <% if @article.author.present? %>
      <span>By <%= @article.author %></span>
    <% end %>
    <% if @article.published_at.present? %>
      <span><%= @article.published_at.to_date %></span>
    <% end %>
  </div>

  <% if @article.image_url.present? %>
    <%= image_tag @article.image_url, class: "w-64 float-right ml-4 mb-4" %>
  <% end %>

  <% if @article.summary.present? %>
    <p class="text-lg text-gray-700 leading-relaxed"><%= @article.summary.html_safe %></p>
  <% end %>

  <div>
    <% label = @article.url&.match?(/\.pdf(\?|$)/i) ? "Read original (PDF)" : "Read original" %>
    <%= link_to label,
            @article.url,
            target: "_blank",
            rel: "noopener",
            class: "text-blue-500 hover:text-blue-600 font-medium" %>
  </div>

  <%= render "shared/section_heading", title: "Insights", id: "insights" %>

  <% if @article.insights.complete.any? %>
    <%= render @article.insights.complete, article: @article %>
  <% else %>
    <%= render "shared/loading_placeholder", id: "insights_loading", message: "Generating insights..." %>
  <% end %>

  <% if @similar_items.any? %>
    <%= render "shared/section_heading", title: "Related" %>
    <%= render partial: "shared/item", collection: @similar_items, as: :item %>
  <% end %>
</div>

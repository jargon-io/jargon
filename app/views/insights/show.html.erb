<div class="w-full max-w-2xl mx-auto">
  <p class="text-sm text-gray-500 mb-4">
    From: <%= link_to @article.title, @article, class: "text-blue-600 hover:text-blue-800" %>
  </p>

  <h1 class="text-3xl font-bold mb-4"><%= @insight.title %></h1>

  <% if @insight.body.present? %>
    <p class="text-lg text-gray-700 leading-relaxed mb-6"><%= @insight.body %></p>
  <% end %>

  <% if @insight.snippet.present? %>
    <div class="bg-gray-50 rounded-lg p-4 mb-6">
      <blockquote class="text-gray-600 italic">
        "<%= @insight.snippet %>"
      </blockquote>
    </div>
  <% end %>

  <div class="mb-8">
    <h2 class="text-lg font-semibold mb-4">Explore Further</h2>

    <% if @insight.research_threads.any? %>
      <ul class="space-y-3 mb-3">
        <% @insight.research_threads.each do |thread| %>
          <li>
            <%= button_to research_threads_path(research_thread_id: thread.id),
                method: :post,
                class: "w-full text-left flex items-start gap-3 p-3 border border-gray-200 rounded-lg hover:border-blue-300 hover:bg-blue-50 cursor-pointer transition-colors" do %>
              <span class="text-blue-500">→</span>
              <span class="text-gray-700 flex-1"><%= thread.query %></span>
              <% if thread.researched? %>
                <span class="text-xs text-green-600">Researched</span>
              <% end %>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% end %>

    <div>
      <%= form_with url: research_threads_path, method: :post, class: "flex gap-2" do |f| %>
        <%= f.hidden_field :insight_id, value: @insight.id %>
        <%= f.text_field :query,
            required: true,
            class: "flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-1 focus:ring-blue-300 focus:border-transparent text-sm" %>
        <%= f.submit "Ask your own",
            class: "px-4 py-2 bg-blue-500 text-white text-sm font-medium rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 cursor-pointer" %>
      <% end %>
    </div>
  </div>

  <% if @similar_insights.any? %>
    <div class="pt-2">
      <h2 class="text-lg font-semibold mb-4">Similar Insights</h2>
      <ul class="space-y-3">
        <% @similar_insights.each do |insight| %>
          <li class="p-3 bg-gray-50 rounded-lg">
            <%= link_to insight.title, insight, class: "font-medium text-blue-600 hover:text-blue-800" %>
            <p class="text-sm text-gray-600 mt-1"><%= insight.body %></p>
            <p class="text-xs text-gray-600 mt-3">
              From: <%= link_to insight.article.title, insight.article, class: "hover:text-gray-600" %>
            </p>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="py-4">
    <%= link_to "← Back to article", @article, class: "text-gray-500 hover:text-gray-700" %>
  </div>
</div>

<% content_for(:title) { "#{@insight.title} | Jargon" } %>
<div class="w-full max-w-2xl mx-auto space-y-4">
  <h1 class="text-3xl font-bold"><%= @insight.title %></h1>

  <% if @insight.body.present? %>
    <p class="text-lg text-gray-700 leading-relaxed"><%= render_content(@insight.body, current_item: @insight) %></p>
  <% end %>

  <%= render "shared/snippet", text: @insight.snippet, current_item: @insight %>

  <div class="pt-4">
    <%= render partial: "articles/article", locals: { article: @insight.article } %>
  </div>

  <%= render "shared/section_heading", title: "Explore", id: "insights" %>

  <%= render @insight.research_threads %>

  <%= form_with url: research_threads_path, method: :post, class: "flex gap-2" do |f| %>
    <%= f.hidden_field :insight_id, value: @insight.id %>
    <%= f.text_field :query,
        required: true,
        class: "flex-1 py-3 px-5 border border-gray-300 rounded-lg focus:outline-none focus:ring-1 focus:ring-blue-300 focus:border-transparent" %>
    <%= f.submit "â†’",
        class: "px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 cursor-pointer" %>
  <% end %>

  <% if @more_from_article.any? %>
    <% source_label = @insight.article.video? ? "video" : (@insight.article.paper? ? "paper" : "article") %>
    <%= render "shared/section_heading", title: "More from the #{source_label}" %>
    <div class="space-y-4" data-controller="expandable-list" data-expandable-list-limit-value="3">
      <% @more_from_article.each do |item| %>
        <div data-expandable-list-target="item">
          <%= render "shared/item", item: item, suppress_source: true %>
        </div>
      <% end %>
      <%= render "shared/expandable_toggle" %>
    </div>
  <% end %>

  <% if @similar_items.any? %>
    <%= render "shared/section_heading", title: "Related" %>
    <div class="space-y-4" data-controller="expandable-list" data-expandable-list-limit-value="3">
      <% @similar_items.each do |item| %>
        <div data-expandable-list-target="item">
          <%= render "shared/item", item: item %>
        </div>
      <% end %>
      <%= render "shared/expandable_toggle" %>
    </div>
  <% end %>

  <% @topics_with_items.each do |topic, items| %>
    <%= render "shared/section_heading", title: topic.phrase.sub(/\A\w/, &:upcase), href: search_path(q: topic.phrase) %>
    <div class="space-y-4" data-controller="expandable-list" data-expandable-list-limit-value="3">
      <% items.each do |item| %>
        <div data-expandable-list-target="item">
          <%= render "shared/item", item: item %>
        </div>
      <% end %>
      <%= render "shared/expandable_toggle" %>
    </div>
  <% end %>
</div>

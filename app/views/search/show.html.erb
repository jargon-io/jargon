<% content_for(:title) { "#{@query.truncate(50)} | Jargon" } %>
<div class="w-full max-w-2xl mx-auto space-y-4">

  <div id="query" class="w-full text-left flex items-start gap-3 p-3 border-2 accent-border accent-bg rounded-lg text-lg">
    <span class="text-blue-500 dark:text-blue-400">â†’</span>
    <span class="text-body flex-1"><%= @query %></span>
  </div>

  <div id="web_search_button" class="flex justify-end">
    <%= button_to "Search web",
        web_search_path(q: @query),
        method: :post,
        class: "px-4 py-2 border btn-primary rounded-lg cursor-pointer" %>
  </div>

  <% if @results.any? %>
    <%= render "shared/section_heading", title: "In your library" %>
    <%= render partial: "shared/item", collection: @results, as: :item %>
  <% else %>
    <p class="text-muted">No results found in your library.</p>
  <% end %>
</div>

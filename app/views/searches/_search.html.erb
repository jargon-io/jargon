<%# locals: (search:, hero: false) %>
<% if hero %>
  <div class="w-full text-left flex items-start gap-3 p-3 border-2 accent-border accent-bg rounded-lg text-lg">
    <%= image_tag "search.png", class: "w-7 h-7 mt-[1px]", alt: "" %>
    <span class="text-xl flex-1"><%= search.query %></span>
  </div>
<% elsif search.pending? %>
  <%= button_to search,
          method: :patch,
          class: "w-full text-left flex items-start gap-3 p-3 border border-default rounded-lg hover:border-blue-300 hover:bg-blue-50 dark:hover:border-blue-900 dark:hover:bg-slate-900 cursor-pointer transition-colors" do %>
    <%= image_tag "search.png", class: "w-5 h-5 mt-[2px]", alt: "" %>
    <span class="text-body flex-1"><%= search.query %></span>
  <% end %>
<% else %>
  <%= link_to search,
          class: "w-full text-left flex items-start gap-3 p-3 border border-default rounded-lg hover:border-blue-300 hover:bg-blue-50 dark:hover:border-blue-900 dark:hover:bg-slate-900 cursor-pointer transition-colors" do %>
    <%= image_tag "search.png", class: "w-5 h-5 mt-[2px]", alt: "" %>
    <span class="text-body flex-1"><%= search.query %></span>
    <% if search.complete? %>
      <%= image_tag "success.png", class: "w-4 h-4", alt: "" %>
    <% end %>
  <% end %>
<% end %>

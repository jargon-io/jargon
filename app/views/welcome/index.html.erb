<% content_for(:title) { "Jargon" } %>
<% content_for(:hide_header, true) if @items.empty? %>

<%= turbo_stream_from "articles" %>

<% if @items.empty? %>
  <div class="w-full max-w-2xl mx-auto flex flex-col items-center justify-center min-h-[60vh]">
    <div class="text-center mb-8">
      <%= image_tag "jargon.png", class: "h-12 w-12 mx-auto mb-4" %>
      <h1 class="text-4xl font-semibold text-heading mb-2">Jargon</h1>
    </div>

    <%= form_with url: queries_path, method: :post, class: "w-full mb-12" do |f| %>
      <div class="flex gap-3">
        <%= f.text_field :q,
            placeholder: "URL or question...",
            autofocus: true,
            class: "flex-1 px-4 py-3 surface border border-strong rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-lg" %>
        <%= f.submit "Go",
            class: "px-6 py-3 btn-primary rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 cursor-pointer text-lg" %>
      </div>
    <% end %>

    <div class="text-muted text-lg space-y-4">
      <p>
        <strong class="text-body">Ingest</strong> articles, YouTube videos, and academic papers from URLs.
      </p>
      <p>
        <strong class="text-body">Extract</strong> key ideas as standalone, linkable insight cards.
      </p>
      <p>
        <strong class="text-body">Connect</strong> related insights automatically via semantic similarity.
      </p>
      <p>
        <strong class="text-body">Explore</strong> your library through search or browse linked insights.
      </p>
      <p>
        <strong class="text-body">Ask</strong> questions that draw from your library and pull in new sources.
      </p>
    </div>
  </div>
<% else %>
  <div class="w-full max-w-2xl mx-auto">
    <div id="items" class="space-y-4">
      <% @items.each do |feed_item| %>
        <%= render "welcome/feed_item", feed_item: feed_item %>
      <% end %>
    </div>
  </div>
<% end %>

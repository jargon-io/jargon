#!/usr/bin/env ruby
require "fileutils"

APP_ROOT = File.expand_path("..", __dir__)

def system!(*args)
  system(*args, exception: true)
end

def headerize(message)
  "\n\e[32m== #{message} ==\e[0m\n"
end

FileUtils.chdir APP_ROOT do
  puts headerize("Installing dependencies")
  system("bundle check") || system!("bundle install")

  puts headerize("Starting Docker containers")
  system! "docker compose up -d"

  puts headerize("Preparing database")
  system! "bin/rails db:prepare"

  puts headerize("Removing old logs and tempfiles")
  system! "bin/rails log:clear tmp:clear"

  unless ARGV.include?("--skip-server")
    puts headerize("Starting development server")
    STDOUT.flush # flush the output before exec(2) so that it displays
    exec "bin/dev"
  end
end
